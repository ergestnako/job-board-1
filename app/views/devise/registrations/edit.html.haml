#account-edit
  = t "devise.views.registrations.edit.title.head", :name=>resource.name
  - semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => { :method => :put }) do |f|
    = form.semantic_errors
    = f.inputs t("devise.views.registrations.edit.title.account") do
      = f.input :email, :input_html=>{:class=>"title"}
      = f.input :password, :input_html=>{:class=>"title"}
      = f.input :password_confirmation, :input_html=>{:class=>"title"}
      = f.input :current_password, :input_html=>{:class=>"title"}, :hint=>"Needed to save your changes."
      
    = f.inputs t("devise.views.registrations.edit.title.contact") do 
      = f.input :name, :input_html=>{:class=>"title"}
      = f.input :company_name, :input_html=>{:class=>"title"}
      
    = f.inputs t("devise.views.registrations.edit.title.config") do
      = f.input :timezone, :as=>:time_zone, :input_html=>{:class=>"title"}
      = f.input :locale, :as=>:select, :collection=>{"FranÃ§ais" => "fr", "English" => "en"}, :input_html=>{:class=>"title"}
    
    = f.buttons


#account-cancel
  = t "devise.views.registrations.edit.title.cancel"
  %p
    Unhappy? #{link_to t("devise.views.registrations.edit.cancel"), registration_path(resource_name), :confirm => t("general.dialogs.confirm.delete"), :method => :delete}.